%form{ :action => '/api/teams', :method => "post"}
  %fieldset
    %ul

      .team
        %h2 Team
        %li
          %label{:for  => "name"} Team Name:
          %input{:type => "text", :name => "team[name]", :class => "text"}
            
        %li
          %label{:for  => "picture"} Team Picture:
          %input{:type => "file", :name => "team[picture]", :class => "text"}

      .players
        %h2 Players

        .player1
          %h3 Player 1
        
          %li
            %label{:for  => "team[players_attributes][player1][type_account]"} Type account:
            %select{:name => "team[players_attributes][player1][type_account]"}
              %option{value: "twitter" }= "Twitter"
              %option{value: "github"  }= "Github"
        
          %li
            %label{:for  => "team[players_attributes][player1][user_account]"} User account:
            %input{:type => "text", :name => "team[players_attributes][player1][user_account]", :class => "user_account"}

        
          %li
            %label{:for  => "team[players_attributes][player1][email]"} Email:
            %input{:type => "text", :name => "team[players_attributes][player1][email]", :class => "email"}
        
        
        .player2
          %h3 Player 2
        
          %li
            %label{:for  => "team[players_attributes][player2][type_account]"} Type account:
            %select{:name => "team[players_attributes][player2][type_account]"}
              %option{value: "twitter" }= "Twitter"
              %option{value: "github"  }= "Github"
        
          %li
            %label{:for  => "team[players_attributes][player2][user_account]"} User account:
            %input{:type => "text", :name => "team[players_attributes][player2][user_account]", :class => "user_account"}
        
          %li
            %label{:for  => "team[players_attributes][player2][email]"} Email:
            %input{:type => "text", :name => "team[players_attributes][player2][email]", :class => "email"}
        
        
    %input{:type => "submit", :value => "Send", :class => "button"}
